@using neoDR.Data.Entities

@{
    ViewData["Title"] = "Delete";
}

@model Category

<h1>Kategori Silme</h1>

<div class="container">
    <div class="card mt-2">
        <div class="card-header bg-primary text-white">
            <h3>Kategori Silme İşlemi</h3>
        </div>
        <div class="card-body">
            @Model.Name kayıtlı kategoriyi silmek istediğinizden emin misiniz?

        </div>
        <div class="card-footer">
            <form method="post" asp-controller="Category" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button class="btn btn-success" type="submit">Sil</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Vazgeç</a>
            </form>
        </div>
    </div>
</div>